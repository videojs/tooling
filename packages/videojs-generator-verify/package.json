{
  "name": "videojs-generator-verify",
  "version": "1.0.2",
  "description": "A tool to verify that a generator-videojs-plugin project is ready for publish.",
  "main": "src/index.js",
  "bin": {
    "vjsverify": "src/cli.js",
    "videojs-generator-verify": "src/cli.js"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/videojs/videojs-generator-verify"
  },
  "author": "Brandon Casey <brandonocasey@gmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "colorette": "^1.0.1",
    "es-check": "^3.0.0",
    "pkg-can-install": "^1.0.2",
    "pkg-ok": "^2.2.0",
    "shelljs": "^0.8.2"
  },
  "scripts": {
    "lint": "vjsstandard",
    "pretest": "npm run lint",
    "test": "ava test/index.test.js",
    "preversion": "npm test",
    "version": "is-prerelease || npm run update-changelog && git add CHANGELOG.md",
    "update-changelog": "conventional-changelog -p videojs -i CHANGELOG.md -s",
    "prepublish": "in-install || ./src/cli.js --skip-es-check"
  },
  "lint-staged": {
    "*.js": [
      "vjsstandard --fix",
      "git add"
    ],
    "README.md": [
      "doctoc",
      "git add"
    ]
  },
  "vjsstandard": {
    "ignore": [
      "test/fixture"
    ]
  },
  "devDependencies": {
    "ava": "^1.0.0-beta.8",
    "conventional-changelog-cli": "^2.0.1",
    "conventional-changelog-videojs": "^3.0.0",
    "doctoc": "^1.3.1",
    "husky": "^1.0.0-rc.13",
    "in-publish": "^2.0.0",
    "lint-staged": "^7.2.2",
    "npm-merge-driver-install": "^1.0.0",
    "uuid": "^3.3.2",
    "videojs-standard": "^7.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "bugs": {
    "url": "https://github.com/videojs/videojs-generator-verify/issues"
  },
  "homepage": "https://github.com/videojs/videojs-generator-verify"
}
