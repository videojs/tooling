{
  "name": "videojs-generator-helpers",
  "version": "1.0.0",
  "description": "A package to keep all of our generator helpers packages, so everything can be updated more easily.",
  "repository": {
    "type": "git",
    "url": "https://github.com/videojs/videojs-generator-helpers"
  },
  "author": "Brandon Casey <brandonocasey@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/videojs/videojs-generator-helpers/issues"
  },
  "homepage": "https://github.com/videojs/videojs-generator-helpers",
  "engine": {
    "node": ">=8"
  },
  "scripts": {
    "lint": "vjsstandard",
    "pretest": "npm run lint",
    "test": "npm run test:unit && npm run test:verify",
    "test:unit": "ava test.js",
    "test:verify": "vjsverify --skip-es-check --verbose",
    "preversion": "npm test",
    "version": "is-prerelease || npm run update-changelog && git add CHANGELOG.md",
    "update-changelog": "conventional-changelog -p videojs -i CHANGELOG.md -s",
    "prepublishOnly": "npm run test:verify"
  },
  "dependencies": {
    "conventional-changelog-cli": "^2.0.5",
    "conventional-changelog-videojs": "^3.0.0",
    "lint-staged": "^8.0.4",
    "not-prerelease": "^1.0.1",
    "npm-merge-driver-install": "^1.1.1",
    "npm-run-all": "^4.1.3",
    "shx": "^0.3.2",
    "husky": "^1.1.2"
  },
  "devDependencies": {
    "ava": "^1.0.0-beta.8",
    "doctoc": "^1.3.1",
    "shelljs": "^0.8.2",
    "uuid": "^3.3.2",
    "videojs-generator-verify": "~1.1.0",
    "videojs-standard": "^8.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "vjsstandard --fix",
      "git add"
    ],
    "README.md": [
      "doctoc",
      "git add"
    ]
  }
}
